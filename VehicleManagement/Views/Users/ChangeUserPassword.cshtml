@model ChangeUserPasswordModel

@{ ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>function Submit() {
            $("#frmSave").submit();
        }</script>
}


<!-- BEGIN container -->
<div class="container">
    <!-- BEGIN row -->
    <div class="row justify-content-center">
        <!-- BEGIN col-10 -->
        <div class="col-xl-10">
            <!-- BEGIN row -->
            <div class="row">
                <!-- BEGIN col-9 -->
                <div class="col-xl-9">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">User</a></li>
                        <li class="breadcrumb-item active">Change Password</li>
                    </ul>

                    <h1 class="page-header">
                        @Model.user.Username <small>Change Password...</small>
                    </h1>

                    <hr class="mb-4" />
                    <!-- BEGIN #sizing -->
                    <div id="sizing" class="mb-5">
                        <div class="card">
                            <form asp-action="ChangeUserPassword" id="frmSave">
                                <div class="card-header d-flex align-items-center">
                                    <span class="flex-grow-1 font-weight-600"></span>
                                    <a href="#" onclick="Submit()" class="text-muted text-decoration-none fs-12px"><i class="fa fa-fw fa-plus"></i></a>
                                    @*<input type="submit" class="btn btn-primary" />*@
                                </div>
                                <div class="card-body">
                                    <div class="row mb-n3">
                                        <div class="col-xl-12">

                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input type="hidden" asp-for="user.Id" />

                                            @*<div class="row">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="user.FirstName" class="control-label">First Name</label>
                                                        <input asp-for="user.FirstName" class="form-control" disabled />
                                                        
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="user.LastName" class="control-label">Last Name</label>
                                                        <input asp-for="user.LastName" class="form-control" disabled />
                                                        
                                                    </div>
                                                </div>
                                            </div>*@
                                            <div class="form-group">
                                                <label asp-for="user.Username" class="control-label">User Name</label>
                                                <input asp-for="user.Username" class="form-control" disabled />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="NewPassword" class="control-label">New Password</label>
                                                <input asp-for="NewPassword" type="password" class="form-control" />
                                            </div>

                                            <br />

                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>    <!--End Card -->
                    </div>
                    <!-- END #sizing -->

                </div>
                <!-- END col-9-->
                <!-- BEGIN col-3 -->
                <div class="col-xl-3">
                    <!-- BEGIN #sidebar-bootstrap -->
                    <nav id="sidebar-bootstrap" class="navbar navbar-sticky d-none d-xl-block">
                        <nav class="nav">
                            <a class="nav-link" asp-action="Index">Back to List</a>

                        </nav>
                    </nav>

                    <!-- END #sidebar-bootstrap -->
                </div>
                <!-- END col-3 -->
            </div>
            <!-- END row -->
        </div>
        <!-- END col-10 -->
    </div>
    <!-- END row -->
</div>
